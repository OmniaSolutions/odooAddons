<odoo>
    <data>
    	
       <record id="res_config_settings_view_form_me" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp.me</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
            <field name="arch" type="xml">
				<xpath expr="//div[@class='app_settings_block']//div[@id='mrp_lock']" position="after">
                    <div class="col-lg-6 col-12 o_setting_box" id="skip_product_cost_calc_div" title="Skip cost calculation for products.">
                        <div class="o_setting_left_pane">
                            <field name="skip_product_cost_calc"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="skip_product_cost_calc"/>
                            <div class="text-muted">
                                Skip cost calculation for products.
                            </div>
                        </div>
                    </div>
				</xpath>
	        </field>
	    </record>
	    
    </data>
</odoo>
