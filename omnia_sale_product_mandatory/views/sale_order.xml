<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sale_order_mandatory_form" model="ir.ui.view">
	    <field name="name">sale.order.mandatory.form</field>
	    <field name="model">sale.order</field>
	    <field name="inherit_id" ref="sale.view_order_form"/>
	    <field name="arch" type="xml">
	       <xpath expr="//tree/field[@name='display_type']" position="after">
	           <field name="parent_product_id" invisible="1"/>
	           <field name="parent_sale_line_needed" invisible="1"/>
	           <field name="self_sale_line_needed" invisible="1"/>
	           <field name="is_child_line_needed" invisible="1"/>
           </xpath>
	    </field>
	</record>
</odoo>


    