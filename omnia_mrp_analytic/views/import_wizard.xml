<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- wizard action on account.analytic -->
        <act_window id="import_wizard_action"
            name="Import Production Cost"
            src_model="account.analytic.account"
            res_model='import.wizard'
            view_mode="form"
            key2="client_action_multi" target="new"/>

        <!-- wizard view -->
        <record id="import_wizard_view" model="ir.ui.view">
            <field name="name">import.wizard.view</field>
            <field name="model">import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Production Cost">
                    <group>
	                    <field name="product"/>
                    </group>
                    <footer>
                    	<button string="Apply" name="import_data" class="oe_right oe_highlight" type="object"/>
                        <button string="Cancel" class="oe_right" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>
