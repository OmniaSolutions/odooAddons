<odoo>
    <data>

	<record id="inventory_valuation_view" model="ir.ui.view">
        <field name="name">inventory.valuation.form</field>
        <field name="model">inventory.valuation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        <form string="Export Form">
        	<group>
        		<field name="warehouse_id"/>
        		<field name="location_id"/>
       			<field name="ref_date"/>
       			<field name="show_zero"/>
		    </group>
            <group>
        		<field name="datas_fname"/>
	            <field name="datas" readonly="1" filename="datas_fname"/>
			</group>
            <separator string=""/>
            <footer>
            	<button special="cancel" string="Cancel"/>
            	<button string="Generate inventory" name="action_generate_inventory" type="object"/>
            </footer>
        </form>
        </field>
    </record>

   <record id="action_inventory_valuation" model="ir.actions.act_window">
       <field name="name">Omnia Inventory Valuation</field>
       <field name="res_model">inventory.valuation</field>
       <field name="view_mode">form</field>
       <field name="view_id" ref="inventory_valuation_view"/>
   </record>

    <menuitem 
	    name="Omnia Inventory Valuation" 
	    action="omnia_inventory_valuation.action_inventory_valuation" 
	    id="menu_inventory_valuation"
	    parent="stock.menu_warehouse_report"
		sequence="12"  
    />
<!-- groups="plm.group_plm_integrationuser" -->
    </data>
</odoo>
