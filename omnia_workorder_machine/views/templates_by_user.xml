<?xml version="1.0" encoding="utf-8"?>
<odoo>	

	<template id="assets_common" name="Import workorder machine js" inherit_id="web.assets_common">
        <xpath expr="script[last()]" position="after">
        	<link rel="stylesheet" href="/omnia_workorder_machine/static/src/css/workorder_by_user.css"/>
        	<script type="text/javascript" src="/omnia_workorder_machine/static/src/js/workorder_by_user.js"></script>
        </xpath>
    </template>

    <template id="by_user" name="Workorder by User">
        <head>
             <t t-call-assets="web.assets_common" /> 
        </head>
        <body>
	        <div class="main_div">
	            <h1 class="main_title">Register WorkOrder Activity</h1>
	            <form class="main_title">
	            	<table style="width: 90%;">
	            		<tr>
	            		   <td id="td_user_id" t-if="hide_user != True"  style="width:8%;">User Id: </td>
	            		   <td t-if="hide_user != True" style="width:15%;"><input id="input_user_id" type="number" class="user_id"/></td>
	            		   <td id="td_employee_id" t-if="hide_user == True" style="width:8%;" >Employee Id: </td>
	            		   <td t-if="hide_user == True" style="width:15%;"><input id="input_employee_id" type="number" class="employee_id"/></td>
	            		   <td  style="text-align: center;"><img id="waiting_clock" style="display:none;width: 280px;" src="/omnia_workorder_machine/static/src/images/clock.gif"/></td>
				           <td align="right" rowspan="2" style="width: 25%;">
				               <div id="customer_image"><img  src="/web/binary/company_logo"/></div>
				           </td>
	            		</tr>
	            		<tr>
	            			<td id="td_user_name">User Name :</td><td><span id="user_name"/></td>
	            		</tr>
	            	</table>
	            </form>
	            <table class="main_table" id="to_replace">
	               <thead>
	                  <tr>
		                <th id="by_user_h_1" class="header_table">ID</th>
		                <th id="by_user_h_2" class="header_table">Date Planned</th>
		                <th id="by_user_h_3" class="header_table">Internal Reference</th>
		                <th id="by_user_h_4" class="header_table">Product Name</th>
		                <th id="by_user_h_5" class="header_table">Work Order Name</th>
		                <th id="by_user_h_6" class="header_table">Production Name</th>
		                <th id="by_user_h_7" class="header_table">N To Do</th>
		                <th id="by_user_h_8" class="header_table">N Produced</th>
		                <th id="by_user_h_9" class="header_table">Scrap</th>
		                <th id="by_user_h_10" class="header_table">Operation</th>
		                <th id="by_user_h_11" class="header_table">Description</th>
		                <th id="by_user_h_12" class="header_table">Work Order State</th>
		                <th id="by_user_h_13" class="header_table">User Working</th>
		                <th id="label" class="header_table" >Label</th>
		                <th id="by_user_h_15" class="header_table">Worksheet</th>
		            </tr>
	               </thead>
	               <tbody id="workorder_body">
	               </tbody>
	            </table>
	        </div>
	    </body>
    </template>

	<template id="template_workorder_machine_table" name="Workorder Table">
	        <t t-foreach="wo_lines" t-as="line">
	               <tr class="content_line">
	                <td id="td_user_h_1" class="table_value wo_id"><t t-esc="line[0]"/></td>
	                <td id="td_user_h_2" class="table_value"><t t-esc="line[8]"/></td>
	                <td id="td_user_h_3" class="table_value internal_ref"><t t-esc="line[2]"/></td>
	                <td id="td_user_h_4" class="table_value"><t t-esc="line[1]"/></td>
	                <td id="td_user_h_5" class="table_value"><t t-esc="line[3]"/></td>
	                <td id="td_user_h_6" class="table_value"><t t-esc="line[4]"/></td>
	                <td id="td_user_h_7" class="table_value n_pieces_to_produce"><t t-esc="line[7]"/></td>
	                <td id="td_user_h_8" class="table_value"><input id="input_n_pieces" type="number" name="n_pieces" class="n_pieces" step="0.001" value="0" /></td>
	                <td id="td_user_h_9" class="table_value"><input id="input_n_scrap" type="number" name="n_scrap" class="n_scrap" step="0.001" value="0" /></td>
	                <td id="td_user_h_10" class="table_value">
	                	<div style="display: block ruby;">
	                		<input class="start_work" type='button' value='Start'/>
	                		<input class="pause_work" type='button' value='Pause'/>
	                		<input class="resume_work" type='button' value='Resume'/>
	                		<input class="stop_work" type='button' value='Record'/>
	                	</div>
	                </td>
	                <td id="td_user_h_11" class="table_value"><t t-esc="line[5]"/></td>
	                <td id="td_user_h_12" class="table_value wo_state" onchange="state_changed(this)"><t t-esc="line[6]"/></td>
                     <td id="td_user_h_13" class="table_value">
                         <t t-if="line[9]=='False'">    
                             <div style="color:red">Not Working</div>
                         </t>
	                    <t t-if="line[9]=='True'">
	                       <div style="color:green">Working</div>
	                    </t>
                     </td>
                    <td id="td_user_h_14" class="table_value wo_isuserworking" style="display:none"><t t-raw="line[9]"/></td>
	                <td id="by_user_r_lable" class="table_value"><input class="print_label" type='button' value='Print'/></td>
	                <td id="td_user_h_15" class="table_value"><a t-att-href="line[10]"  target="_blank">View</a></td>
	            </tr>
	       </t>
	</template>

</odoo>