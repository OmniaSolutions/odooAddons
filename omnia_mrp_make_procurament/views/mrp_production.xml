<odoo>
    <record id="omnia_mrp_make_procurament_mrp_mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="create_procuraments"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-tachometer">
                    <div class="o_form_field o_stat_info">
                        <span class="">Run.A</span>
                    </div>
                </button>
           </div>
         <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='quantity_done']" position="after">
            <field name="ava_tmp_pur_order"/>
        </xpath>
                                     
        </field>
    </record> 
</odoo>
