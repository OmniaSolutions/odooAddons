<odoo>
    <record id="mrp_production_externally_view_wizard" model="ir.ui.view">
        <field name="name">Replace Product</field>
        <field name="model">wiz.product.replace</field>
        <field name="arch" type="xml">
        <form>
            <group>
                 <label for="from_product_id"/>
                 <div>
                     <span> BOM lines: </span>
                     <field class="oe_inline" name="from_product_id_count" readonly="1"/>
                 </div>
                 <field class="oe_inline" name="from_product_id" options="{'no_create': True}"/>
                 <field name="to_product_id" options="{'no_create': True}"/>
            </group>
            <separator string=""/>
            <footer>
                <button string="Cancel" class="btn-default" special="cancel"/>
                <button string="Replace" name="replace_product" type="object" confirm="All the BOM lines affected will be replaced, are you sure you want to continue ?"/>
            </footer>
        </form>
        </field>
    </record>
</odoo>