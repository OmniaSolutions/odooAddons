<odoo>
    <data>
        <template id="report_sale_order_extended" name="Extend report sale order" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='page']/h2/span" position="replace">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-field="doc.name"/>
	            </t>
	            <t t-else="">
	                <span t-field="doc.proforma_number"/>
	            </t>
            </xpath>
        </template>
    </data>
</odoo>