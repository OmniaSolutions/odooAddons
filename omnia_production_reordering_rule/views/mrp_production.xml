        <record id="reordering_rule_production_order_server_action" model="ir.actions.server">
            <field name="name">Assign reordering Rule</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="state">code</field>
            <field name="code">records.button_reorder_rule()</field>
        </record>

        <record id="run_reordering_rule_action" model="ir.values">
            <field name="model_id" ref="mrp.model_mrp_production" />
            <field name="name">Assign reordering Rule</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">mrp.production</field>
            <field name="value" eval="'ir.actions.server,' + str(ref('reordering_rule_production_order_server_action'))" />
        </record>
        
     </data>
 </odoo>