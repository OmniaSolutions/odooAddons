<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="manufacturing_subcontracting_rule_mrp_workorder" model="ir.ui.view">
        <field name="name">manufacturing.subcontracting.rule.mrp.workorder</field>
        <field name="model">mrp.workorder</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view"/>
        <field name="arch" type="xml">
       
           <field name="consumption" position="before">
                <button name="button_produce_externally"  
                    string="Produce Externally" type="object" 
                    attrs="{'invisible': ['|', ('state', '=', 'external'), ('production_state', '=', 'done')]}"/>
                <button name="button_cancel_produce_externally"  
                        string="Cancel Produce Externally" type="object" 
                        attrs="{'invisible': [('state', '!=', 'external')]}"/>
            </field>
             
            <field name="name" position="after">
               <field name="external_product"/>
            </field>
        </field>
    </record>

</odoo>
     