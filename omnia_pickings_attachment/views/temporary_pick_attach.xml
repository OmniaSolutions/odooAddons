<odoo>     

	<record id="plm_temporary_purchase_picking_attachments" model="ir.ui.view">
        <field name="name">Attach to pickings</field>
        <field name="model">temporary.pick.attach</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        <form string="Attach to pickings">
            <group>
            	<field name="attachment" filename="attachment_name"/>
            	<field name="attachment_name"/>
        		<field name="picking_ids" colspan="4"/>
			</group>
            <footer>
            	<button special="cancel" string="Cancel"/>
            	<button string="Attach" 
            			name="action_attach_to_pickings" 
            			type="object"/>
            </footer>
        </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="plm_temporary_purchase_picking_attachments_action">
        <field name="name">Attach to pickings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">temporary.pick.attach</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="plm_temporary_purchase_picking_attachments"/>
    </record>

</odoo>
