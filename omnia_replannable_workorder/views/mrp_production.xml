<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    <record id="mrp_production_form_replannable_omnia" model="ir.ui.view">
        <field name="name">mrp.production.form.replannable.omnia</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']//tree//field[@name='quantity_done']" position="after">
            	<field name="workorder_id" groups="base.group_no_one"></field>
                <button name="open_related_workorder" 
	                type="object" 
	                string="Open Work Order"
	                icon="fa-certificate"
	                attrs="{'invisible': [('workorder_id', '=', False)]}"
	                />
            </xpath>
        </field>
    </record>

    </data>
</odoo>
